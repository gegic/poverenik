<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
    xmlns:zalba-cutanje="http://www.ftn.uns.ac.rs/zalba-cutanje">
    <xs:include schemaLocation="poverenik.xsd"/>
    <xs:element name="zalba-cutanje" type="Zalba"/>
    <xs:complexType mixed="true" name="Zalba">
        <xs:sequence>
            <xs:element name="svrha" type="xs:string"/>
            <xs:element name="primalac" type="Organ"/>
            <xs:element name="zakon" type="Akt"/>
            <xs:element name="protiv" type="Organ"/>
            <xs:element name="razlog" type="BiranjeRazloga">
                <xs:key name="kljucRazloga">
                    <xs:selector xpath="izbor"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
            <xs:element name="datum-zahteva" type="xs:date"/>
            <xs:element name="podaci-o-zahtevu" type="xs:string"/>
            <xs:element name="napomena" type="xs:string"/>
            <xs:element name="mesto" type="xs:string"/>
            <xs:element name="podnosilac" type="Osoba"/>
        </xs:sequence>
        <xs:attribute name="datum" type="xs:date"/>
    </xs:complexType>
    <xs:complexType name="IzborRazloga">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="naziv" type="xs:string" use="required"/>
                <xs:attribute name="id" type="xs:ID" use="required"/>
                <xs:attribute name="izabran" type="xs:boolean"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="BiranjeRazloga">
        <xs:sequence>
            <xs:element maxOccurs="unbounded" name="izbor" type="IzborRazloga"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
