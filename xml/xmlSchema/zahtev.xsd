<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
    xmlns:zahtev="http://www.ftn.uns.ac.rs/zahtev">
    <xs:include schemaLocation="poverenik.xsd"/>
    <xs:element name="zahtev" type="Zahtev"/>

    <xs:complexType name="Zahtev" mixed="true">
        <xs:sequence>
            <xs:element name="organ" type="Organ"/>
            <xs:element name="naslov" type="xs:string"/>
            <xs:element name="zakon" type="Akt"/>
            <xs:element name="tip-zahteva" type="BiranjeZahteva">
                <xs:key name="kljucZahteva">
                    <xs:selector xpath="izbor"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
            <xs:element name="tip-informacije" type="xs:string"/>
            <xs:element name="mesto" type="xs:string"/>
            <xs:element name="trazilac-informacije" type="Osoba"/>
        </xs:sequence>
        <xs:attribute use="required" name="datum" type="xs:date"/>
    </xs:complexType>
    <xs:complexType name="BiranjeZahteva">
        <xs:sequence>
            <xs:element maxOccurs="unbounded" name="izbor" type="IzborZahteva"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="IzborZahteva">
        <xs:choice minOccurs="0">
            <xs:element name="tip-dostave" type="BiranjeZahteva">
                <xs:key name="kljucDostave">
                    <xs:selector xpath="izbor"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
            <xs:element name="drugi-nacin" type="xs:string"/>
        </xs:choice>
        <xs:attribute name="naziv-izbora" type="xs:string" use="required"/>
        <xs:attribute name="id" type="xs:ID" use="required"/>
        <xs:attribute name="izabran" type="xs:boolean"/>
    </xs:complexType>
</xs:schema>
